mixin card(article)
  .card.card_under
    a( href="#{article.url}" )
      h3.headline #{article.title}
    h4.timestamp #{article.published_date}
    p.abstract
      | #{article.abstract}
    p.article_text
      - if (article.text === undefined)
        a( href="#{article.url}" ) Source
      - else
        | !{article.text}


html
  head
    meta(charset='utf-8')
    title Newsline
    link(href='/styles/normalize.css', rel='stylesheet', type='text/css')
    link(rel='stylesheet/less', type='text/less', href='/styles/style.less')
  body
    #content
    .lightbox
      .card_stack
        for article in story
          +card(article)
        
